<Alloy>
	<Window id="ventanaInicio">
       <ScrollView id="fotos">
            <ImageView id="imagen1" class="imagenLugar"/>
            <ImageView id="imagen2" class="imagenLugar"/>
            <ImageView id="imagen3" class="imagenLugar"/>
        </ScrollView>
        <ScrollView id="detalle">
            <Label id="nombreLugar" />
            <Label id="descripcionLugar" />
            <View class="fila">
                <Label class="font-lg" icon="fa-map-marker"/>
                <Label class="campo" id="direccionLugar" />
            </View>
            <View class="fila">
                <Label class="font-lg" icon="fa-phone"/>
                <Label class="campo" id="telefonoLugar" />
            </View>
            <View class="fila" id="calificar">
                <View id="promedio">
                    <Label id="promedioIcon"/>
                    <Label id="promedioValor" />
                </View>
            </View>
            <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
        </ScrollView>
    </Window>
</Alloy>
