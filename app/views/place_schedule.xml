<Alloy>
	<Window id="scheduleWindow">
        <ListView id="listView" defaultItemTemplate="default">
            <Templates>
                <ItemTemplate name="default">
                    <View id="listItem">
                        <View id="scheduleInfo">
                            <View id="dayPane">
                                <Label id="dayNumber" bindId="dayNumber"/>
                                <Label id="dayName" bindId="dayName"/>
                            </View>
                            <View id="hoursPane">
                            </View>
                        </View>
                    </View>
                </ItemTemplate>
            </Templates>
            <ListSection id="section" />
        </ListView>
    </Window>
</Alloy>
