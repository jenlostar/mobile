<Alloy>
    <Window class="container">
        <ListView id="listView" defaultItemTemplate="default">
            <Templates>
                <ItemTemplate name="default">
                    <View id="listItem">
                        <View id="placeInfo">
                            <Label id="name" bindId="name"/>
                            <Label id="address" bindId="address"/>
                            <Label id="description" bindId="description"/>
                        </View>
                    </View>
                </ItemTemplate>
            </Templates>
            <ListSection id="section" />
        </ListView>
        <ActivityIndicator id="activityIndicator"/>
        <Notification id="toast" message="Cargando..." duration="Ti.UI.NOTIFICATION_DURATION_SHORT" />
    </Window>
</Alloy>
