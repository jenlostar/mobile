<Alloy>
	<Window id="ventanaReservas">
        <ListView id="controlLista" defaultItemTemplate="default">
            <Templates>
                <ItemTemplate name="default">
                    <Label id="hora" bindId="hora"/>
                    <Label id="estado" bindId="estado"/>
                </ItemTemplate>
            </Templates>
            <ListSection id="seccionLista" />
        </ListView>
        <View id="navegacion">
            <Label id="anterior" class="font-navegacion" icon="fa-angle-left"/>
            <Label id="diaActualNavegacion" />
            <Label id="siguiente" class="font-navegacion" icon="fa-angle-right"/>
            <Widget id="fa" src="com.mattmcfarland.fontawesome"/>
        </View>
    </Window>
</Alloy>
